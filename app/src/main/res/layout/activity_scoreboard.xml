<?xml version="1.0" encoding="utf-8"?>

    <!-- TextViews to display the highest 5 scores -->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="629dp"
            android:fontFamily="monospace"
            android:text="Score Board"
            android:textAlignment="center"
            android:textColor="#48327C"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textViewScore1"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="91dp"
            android:layout_marginTop="190dp"
            android:layout_marginEnd="91dp"
            android:layout_marginBottom="503dp"
            android:text="Score 1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewScore2"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
